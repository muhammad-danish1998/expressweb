<!doctype html>
<html lang="en">

<head>
    {{>headerlinks}}
</head>

<body>
    <!-- --------------- Navbar Start -----------------------  -->
    {{>navbar}}
    <!-- ---------------------------- Navbar End ---------------------------  -->
    <!-- main  -->
    <div class="row container maincontainer">
        <!-- left side  -->
        <div class="col-12 col-md-6 left">
            <h5>Welcome To Weather App</h5>
            <h2>Get the Lates <span style="color: blue;">Weather</span> Info Of City</h2>
            <button>CHECK NOW</button>
        </div>
        <!-- right side  -->
        <div class="col-12 col-md-6 right">
            <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="./images/1.png" class=" w-100" alt="">
                    </div>
                    <div class="carousel-item">
                        <img src="./images/2.png" class=" w-100" alt="">
                    </div>
                    <div class="carousel-item">
                        <img src="./images/3.png" class=" w-100" alt="">
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls"
                    data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls"
                    data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
    </div>
   {{>footer}}

